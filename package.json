{
    "name": "ozelapi",
    "description": "İsmet Özel şiirleri ve mısraları çekebileceğiniz RESTful API",
    "version": "0.1.0",
    "author": "Kerim Kaan Dönmez <kaan@kerimkaan.com> (http://kerimkaan.com)",
    "bugs":  "https://github.com/kerimkaan/ozel/issues",
    "license": "MIT",
    "keywords": ["ismet özel", "şiir", "api"],
    "repository": "github:kerimkaan/ozel",
    "private": true,
    "scripts": {
        "start": "node ./bin/www",
        "dev": "nodemon ./bin/www"
    },
    "dependencies": {
        "compression": "^1.7.4",
        "cookie-parser": "~1.4.4",
        "debug": "~2.6.9",
        "express": "~4.16.1",
        "http-errors": "~1.6.3",
        "mongoose": "^5.7.5",
        "mongoose-sequence": "^5.1.0",
        "mongoose-simple-random": "^0.4.1",
        "morgan": "~1.9.1",
        "pug": "^2.0.4"
    },
    "devDependencies": {
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^13.2.0",
        "eslint-plugin-import": "^2.18.0",
        "nodemon": "^1.19.1"
    },
    "eslintConfig": {
        "extends": "airbnb-base",
        "env": {
            "es6": true,
            "browser": true,
            "node": true
        },
        "rules": {
            "brace-style": [
                "error",
                "stroustrup"
            ],
            "comma-dangle": [
                "error",
                "never"
            ],
            "no-unused-vars": [
                "warn"
            ],
            "no-var": [
                "off"
            ],
            "one-var": [
                "off"
            ]
        }
    }
}
