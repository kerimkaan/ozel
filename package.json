{
    "name": "ozelapi",
    "description": "İsmet Özel şiirleri ve mısraları çekebileceğiniz RESTful API",
    "version": "0.1.1",
    "author": "Kerim Kaan Dönmez <kaan@kerimkaan.com> (https://kerimkaan.com)",
    "bugs": "https://github.com/kerimkaan/ozel/issues",
    "license": "MIT",
    "keywords": [
        "ismet özel",
        "şiir",
        "api"
    ],
    "repository": "github:kerimkaan/ozel",
    "private": true,
    "scripts": {
        "start": "node ./bin/www",
        "dev": "nodemon ./bin/www"
    },
    "dependencies": {
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.5",
        "debug": "~4.3.2",
        "dotenv": "^10.0.0",
        "express": "~4.17.1",
        "http-errors": "~1.8.0",
        "mongoose": "^6.1.5",
        "mongoose-sequence": "^5.3.1",
        "mongoose-simple-random": "^0.4.1",
        "morgan": "~1.10.0",
        "pug": "^3.0.2"
    },
    "devDependencies": {
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.25.3",
        "nodemon": "^2.0.15"
    },
    "eslintConfig": {
        "extends": "airbnb-base",
        "env": {
            "es6": true,
            "browser": true,
            "node": true
        },
        "rules": {
            "brace-style": [
                "error",
                "stroustrup"
            ],
            "linebreak-style": 0,
            "comma-dangle": [
                "error",
                "never"
            ],
            "no-unused-vars": [
                "warn"
            ],
            "no-var": [
                "off"
            ],
            "one-var": [
                "off"
            ]
        }
    }
}
